<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_device_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_size_16dp">

    <TextView
        android:id="@+id/tv_engineer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_size_16dp"
        android:text="负责工程师"
        android:textColor="#2D3033"
        android:textSize="@dimen/font_size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_size_10dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/margin_size_16dp"
        android:paddingVertical="@dimen/margin_size_10dp">

        <ImageView
            android:id="@+id/iv_engineer_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/margin_size_14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_engineer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:text="张三"
            android:textColor="#2D3033"
            android:textSize="@dimen/font_size_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_engineer_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_engineer_logo" />

        <TextView
            android:id="@+id/tv_engineer_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:layout_marginTop="@dimen/margin_size_12dp"
            android:text="110"
            android:textColor="@color/title"
            app:layout_constraintStart_toEndOf="@+id/iv_engineer_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_engineer_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>