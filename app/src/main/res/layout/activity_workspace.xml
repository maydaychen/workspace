<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.workspace.WorkspaceActivity">

    <com.huanxin.workspace.widget.CustomTitleBar
        android:id="@+id/ct_workspace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:title="工单管理" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Spinner
            android:id="@+id/sp_source"
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/sp_status"
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_workspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>